<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Application_Status_Reason_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(Status__c, &quot;Declined&quot;),
ISPICKVAL(Application_Status_Reason__c, &quot;&quot;)
)</errorConditionFormula>
    <errorMessage>You must select a Application Status Reason to proceed.</errorMessage>
</ValidationRule>
